#include <iostream>

using namespace std;

/* finding the ascii number of a character */

int main() {

    char character;
    int asciiValue;

    std::cout << "Please enter a character:" << endl;

    std::cin >> character;

    asciiValue = (int) character;

    std::cout << "The ASCII value of " << character << " is " << asciiValue << endl;


    return 0;
}
