#include <iostream>

using namespace std;

/* finding the uppercase/lowercase letter/value of an ASCII*/

int main() {
    char lowerCaseLetter, upperCaseLetter;
    int offset;

    std::cout << "Please enter a lower case letter:" << endl;
    cin >> lowerCaseLetter;

    offset = (int) (lowerCaseLetter - 'a');

    upperCaseLetter = (char) ('A' + offset);

    std::cout << "The upper case of " << lowerCaseLetter << " is " << upperCaseLetter << endl;
    return 0;
    
